<div class="form_wrapper">
  <div class="job_form">
    <%= simple_form_for(@job, method: :patch, url: update_date_applied_job_path) do |f| %>
      <%= render 'date_applied_form', job: @job, f: f %>
      <%= f.submit 'Add date', class: 'btn btn-primary' %>
    <% end %>
    <%= link_to 'Skip', new_url_job_path(@job), class: 'skip_button btn btn-default' %>
  </div>
</div>
