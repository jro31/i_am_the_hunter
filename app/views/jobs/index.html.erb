<div class="jobs_index_wrapper">
<% if @jobs.exists? %>
  <table id="jobs_table">
    <tr>
      <th>Company</th>
      <th>Agency</th>
      <th>Position</th>
      <th>Location</th>
      <th>Salary</th>
      <th>Date applied</th>
      <th>Status</th>
      <th>URL</th>
      <th>Notes</th>
      <th>Actions</th>
    </tr>
    <% @jobs.each do |job| %>
      <tr class="jobs_row">
        <td><%= job.company_name %></td>
        <td><% if job.agency == true %>âœ“<% end %></td>
        <td><%= job.position %></td>
        <td><%= job.location %></td>
        <td>
          <% if job.salary_low != nil && job.salary_high != nil %>
            <% case job.currency when 'EUR' %>&#8364;
            <% when 'GBP' %>&#163;
            <% when 'USD' %>&#36;
            <% end %>
          <% end %>
          <%= job.salary_low %>
          <% if job.salary_low != job.salary_high %>- <%= job.salary_high %><% end %>
          <% if job.salary_low != nil && job.salary_high != nil %>
            &#47;<%= job.salary_type %>
          <% end %>
        </td>
        <td><%= job.date_applied %></td>
        <td><%= job.status %></td>
        <td><% if job.url != nil && job.url != "" %><%= link_to 'Visit site', job.url, target: "_blank" %><% end %></td>
        <td><%= job.notes %></td>
        <td class="actions">
          <div>
            <%= link_to root_path do %><i class="fas fa-pencil-alt"></i><% end %>
            <%= link_to root_path do %><i class="far fa-trash-alt"></i><% end %>
          </div>
        </td>
      </tr>
  <% end %>
</table>
<% else %>
  <p>You don't have any jobs. Deal with it.</p>
<% end %>

<% if policy(Job).new? %>
  <%= link_to 'Add a new job', new_job_path, class: 'new_job_button btn btn-primary' %>
  <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-default' %>
<% end %>
</div>
