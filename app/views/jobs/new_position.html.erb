<div class="form_wrapper">
  <div class="job_form">
    <%= simple_form_for(@job, method: :patch, url: update_position_job_path) do |f| %>
      <%= f.input :position, label: "What position did you apply for?", placeholder: "Web Developer" %>
      <%= f.submit 'Add position', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
